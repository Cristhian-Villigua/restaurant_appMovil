<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base en modo claro -->
    <style name="Base.Theme.ProjectMobileApplicacion" parent="Theme.Material3.Light.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/red_primary</item>
        <item name="colorSecondary">@color/red_secondary</item>

        <!-- Fondo general -->
        <item name="android:windowBackground">@color/white_base</item>

        <!-- Superficies (cards, EditText, etc.) -->
        <item name="colorSurface">@color/white_base</item>

        <!-- Colores de texto y hints -->
        <item name="colorOnSurfaceVariant">@color/light_gray</item>
        <item name="colorOnSurface">@color/black_text</item>
    </style>

    <!-- Tema principal de la app -->
    <style name="Theme.ProjectMobileApplicacion" parent="Base.Theme.ProjectMobileApplicacion" />

    <!-- Estilo del DatePicker (modo claro) -->
    <style name="SpinnerDatePicker" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
        <item name="colorPrimary">@color/red_primary</item>
        <item name="android:textColorPrimary">@color/black_text</item>
        <item name="android:textColorSecondary">@color/black_text</item>
        <item name="android:background">@color/white_base</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:background">@color/white_base</item>
    </style>

    <!-- Estilo para CircleImageView (bordes redondeados) -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>