<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base en modo oscuro -->
    <style name="Base.Theme.ProjectMobileApplicacion" parent="Theme.Material3.Dark.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/red_primary_dark</item>
        <item name="colorSecondary">@color/red_secondary_dark</item>

        <!-- Fondo general -->
        <item name="android:windowBackground">@color/black_base</item>

        <!-- Superficies (cards, EditText, etc.) -->
        <item name="colorSurface">@color/black_base</item>

        <!-- Colores de texto y hints -->
        <item name="colorOnSurfaceVariant">@color/light_gray</item>
        <item name="colorOnSurface">@color/white_text</item>
    </style>

    <!-- Tema principal de la app -->
    <style name="Theme.ProjectMobileApplicacion" parent="Base.Theme.ProjectMobileApplicacion" />

    <!-- Estilo del DatePicker (modo oscuro) -->
    <style name="SpinnerDatePicker" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="android:datePickerStyle">@style/SpinnerDatePickerStyle</item>
        <item name="colorPrimary">@color/red_primary_dark</item>
        <item name="android:textColorPrimary">@color/white_text</item>
        <item name="android:textColorSecondary">@color/white_text</item>
        <item name="android:background">@color/black_base</item>
    </style>

    <style name="SpinnerDatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:background">@color/black_base</item>
    </style>

    <!-- Estilo para CircleImageView -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

</resources>